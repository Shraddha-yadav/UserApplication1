<script type="text/javascript">




        $("#country").change(function () {
            $("#State").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getState", "User")',

                dataType: 'json',

                data: { id: $("#country").val() },


                success: function (states) {

                    //$("#State").get(0).options[0] = new Option("Select State", "1");
                    $.each(states, function (i, state) {
                        $("#State").append('<option value="' + state.Value + '">' +state.Text + '</option>');

                    });
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
            return false;
        });


        $("#State").change(function () {
            $("#city").empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("getCity","User")',
                dataType: 'json',
                data: { id: $("#State").val() },
                success: function (city) {
                    //$("#city").get(0).options[0] = new Option("Select city", "1");
                    $.each(city, function (i, city) {
                        $("#city").append('<option value="'+ city.Value + '">'+ city.Text + '</option>');
                    });
                },
                error: function (ex) {
                    alert('Failed.' + ex);
                }
            });
            return false;
        });
</script>







